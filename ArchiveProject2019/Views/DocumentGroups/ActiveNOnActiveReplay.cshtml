@model ArchiveProject2019.Models.DocumentGroup


@using ArchiveProject2019.Resources
@{
    ViewBag.Title = main_lang.DocumentGroups;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h3>@main_lang.DocReplayMessage</h3>
<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.DocumentId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.document.Subject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GroupId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Group.Name)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.EnableReplay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnableReplay)
        </dd>












    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="modal-footer justify-content-center" style="margin-top:50px">
