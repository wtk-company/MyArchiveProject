@model ArchiveProject2019.Models.DocumentParty

@using ArchiveProject2019.Resources
@{
    ViewBag.Title = main_lang.DocumentParties;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h3>@main_lang.RemoveElementMessage</h3>
<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.PartyId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Party.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DocumentId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Document.Subject)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>




        <dt>
            @Html.DisplayNameFor(model => model.CreatedById)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy.FullName)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="modal-footer justify-content-center" style="margin-top:50px">
            <input type="submit" value=" @main_lang.OkRemove" class="btn btn-danger" />
            <button title=" @main_lang.CloseButton" type="button" class="btn btn-warning" data-dismiss="modal">@main_lang.CloseButton</button>
        </div>
    }
</div>
