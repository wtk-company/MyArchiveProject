@model ArchiveProject2019.Models.Party

@using ArchiveProject2019.Resources
@using ArchiveProject2019.HelperClasses


@{
    ViewBag.Title = main_lang.DocumentParties;
    Layout = "~/Views/Shared/_Layout2.cshtml";

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CreatedAt)
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreatedAt)
        @Html.Hidden("OldName", (string)ViewBag.OldName)
        @Html.HiddenFor(model => model.CreatedById)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <div class="modal-footer justify-content-center" style="margin-top:50px">

                <input type="submit" title="@main_lang.EditButton" value="@main_lang.EditButton" class="btn btn-success" />
                <button type="button" title="@main_lang.CloseButton" class="btn btn-warning" data-dismiss="modal">@main_lang.CloseButton</button>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


