@model ArchiveProject2019.Models.DocumentDepartment


@using ArchiveProject2019.Resources
@{
    ViewBag.Title = main_lang.DocumentDepartments;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h3>@main_lang.DocSealMessage</h3>
<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.DocumentId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.document.Subject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.Name)
        </dd>




        <dt>
            @Html.DisplayNameFor(model => model.EnableSeal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnableSeal)
        </dd>





    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="modal-footer justify-content-center" style="margin-top:50px">

            <input title="@main_lang.EditStatus" type="submit" value=" @main_lang.EditStatus" class="btn btn-success" />
            <button title="@main_lang.CloseButton" type="button" class="btn btn-default" data-dismiss="modal">@main_lang.DocSealMessage</button>
        </div>

    }
</div>
