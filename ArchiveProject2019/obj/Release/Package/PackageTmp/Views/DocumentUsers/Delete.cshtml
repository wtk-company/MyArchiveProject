@model ArchiveProject2019.Models.DocumentUser


@using ArchiveProject2019.Resources
@{
    ViewBag.Title = main_lang.DocumentUsers;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



<h3>@main_lang.RemoveElementMessage</h3>
<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.DocumentId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.document.Subject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.FullName)
        </dd>











    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="modal-footer justify-content-center" style="margin-top:50px">


    <input title="@main_lang.OkRemove" type="submit" value=" @main_lang.OkRemove" class="btn btn-danger" />
    <button title="@main_lang.CloseButton" type="button" class="btn btn-default" data-dismiss="modal">@main_lang.CloseButton</button>
</div>

    }
</div>
