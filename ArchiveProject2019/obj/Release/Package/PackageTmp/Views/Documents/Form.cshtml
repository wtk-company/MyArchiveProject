@model ArchiveProject2019.ViewModel.DocFromsViewModel
@using ArchiveProject2019.Resources

@{
    ViewBag.Title = main_lang.FormsCanable;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<p>
    @for (int i = 0; i < Model.Froms.Count; i++)
    {

        <a href="@Url.Action("Create","Documents", new {id = Model.Froms[i].Id, docId = Model.DocId, IsReplay = Model.IsReplay })" title="اضافة لهذا النموذج" class="btn btn-default"><i class="glyphicon glyphicon-plus-sign">  </i>@Model.Froms[i].Name</a>

    }

</p>


<div class="modal-footer justify-content-center" style="margin-top:50px">

    <button title=" @main_lang.CloseButton" type="button" class="btn btn-warning" data-dismiss="modal">@main_lang.CloseButton</button>
</div>
