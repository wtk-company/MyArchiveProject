@model ArchiveProject2019.Models.JobTitle
@using ArchiveProject2019.Resources
@{
    ViewBag.Title = main_lang.JobTitles;

    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h3>@main_lang.DeleteMessage</h3>
<div>

    <dl class="dl-horizontal">




        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Symbol)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Symbol)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MaximumMember)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaximumMember)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <div class="modal-footer justify-content-center" style="margin-top:50px">
            <input type="submit" title="@main_lang.DeleteButton" value="@main_lang.DeleteButton" class="btn btn-danger" />

            <button type="button" title="@main_lang.CloseButton" class="btn btn-warning" data-dismiss="modal">@main_lang.CloseButton</button>
        </div>

    }
</div>
