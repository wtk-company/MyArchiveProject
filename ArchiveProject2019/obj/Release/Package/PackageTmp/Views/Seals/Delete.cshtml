@model ArchiveProject2019.Models.SealDocument
@using ArchiveProject2019.Resources


@{
    ViewBag.Title = main_lang.MyDocumentSeals;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h3>@main_lang.DeleteMessage</h3>
<div>


    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        @Html.HiddenFor(s => s.Id)

        <div class="modal-footer justify-content-center" style="margin-top:50px">
            <input type="submit" title="@main_lang.DeleteButton" value="@main_lang.DeleteButton" class="btn btn-danger" />
            <button type="button" title="@main_lang.CloseButton" class="btn btn-default" data-dismiss="modal">@main_lang.CloseButton</button>
        </div>
    }
</div>
