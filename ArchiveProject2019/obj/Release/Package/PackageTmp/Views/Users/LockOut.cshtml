@model ArchiveProject2019.Models.ApplicationUser

@using ArchiveProject2019.HelperClasses

@using ArchiveProject2019.Resources


@{
    ViewBag.Title = main_lang.Users;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@if (ViewBag.LockState == "A")
{

    <h3>@main_lang.LockMessage</h3>

}
else
{
    <h3>@main_lang.Unlockmessage</h3>


}

<div>

    <dl class="dl-horizontal">








        <dt>
            @Html.DisplayNameFor(model => model.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>





        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt>
            @Html.DisplayName(main_lang.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(a => Model.Id)




        <div class="modal-footer justify-content-center" style="margin-top:50px">

            <input type="submit" title="@main_lang.EditLock" value="@main_lang.EditLock" class="btn btn-success" />
            <button type="button" title="@main_lang.CloseButton" class="btn btn-warning" data-dismiss="modal">@main_lang.CloseButton</button>
        </div>



    }
</div>
