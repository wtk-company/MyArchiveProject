@model ArchiveProject2019.Models.UserGroup

@using ArchiveProject2019.Resources


@{
    ViewBag.Title = main_lang.GroupUsers;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h3>@main_lang.OkRemove</h3>
<div>

    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayNameFor(model => model.GroupId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Group.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.FullName)
        </dd>





        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>


    </dl>

    @using (Html.BeginForm("Delete", "UsersGroups"))
    {
        @Html.AntiForgeryToken()







        <div class="modal-footer justify-content-center" style="margin-top:50px">
            <input type="submit" title=" @main_lang.RemoveUser" value="@main_lang.RemoveUser" class="btn btn-danger" />

            <button type="button" title="@main_lang.CloseButton" class="btn btn-warning" data-dismiss="modal">@main_lang.CloseButton</button>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
