@model List<ArchiveProject2019.ViewModel.GroupUserViewModel>

@using ArchiveProject2019.Resources


@{
    ViewBag.Title = main_lang.GroupUsers ;
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}
<style>

    input[type="checkbox"] {
        width: 20px;
        height: 20px;
    }
</style>

@Html.Partial("_StartView")
<a href="@Url.Action("Index","Groups")" class="btn btn-warning">@main_lang.BackToGroups/a>


@using (Html.BeginForm("Create", "UsersGroups", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <table id="form" class="table table-striped  table-hover dt" style="text-align:center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().FullName)


                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().UserName)


                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().IsGroupMember)


                </th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    @Html.HiddenFor(model => Model[i].GroupId)
                    @Html.HiddenFor(model => Model[i].UserId)
                    <td>
                        @Html.DisplayFor(model => Model[i].FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].UserName)
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => Model[i].IsGroupMember)
                    </td>

                </tr>


            }
        </tbody>
    </table>

    <div class="form-group">

        <input title="@main_lang.AddUsersToGroup" type="submit" value="@main_lang.AddUsersToGroup" class="btn btn-primary" />

    </div>

}

@Html.Partial("_LastView")




